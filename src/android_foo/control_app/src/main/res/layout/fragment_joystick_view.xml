<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

        <com.robotca.ControlApp.Views.JoystickView
            android:id="@+id/joystick_fragment_virtual_joystick"
            android:layout_width="300dip"
            android:layout_height="300dip"
            android:layout_alignParentBottom="true"/>

        <CheckBox
            android:id="@+id/tilt_checkbox"
            android:text="@string/use_tilt_sensor_string"
            android:layout_alignBottom="@id/joystick_fragment_virtual_joystick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonPressed"
            android:enabled="false"/>

    </RelativeLayout>